<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/list_contacts_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/list_contacts_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_contacts_image"
            android:text="Username"
            android:textColor="@color/colorText"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/list_contacts_tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_contacts_username"
            android:layout_toRightOf="@+id/list_contacts_image"
            android:text="sammieb1"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="View Profile"
            android:layout_below="@+id/list_contacts_username"
            android:textSize="18sp"
            android:textColor="#021bff"
            android:id="@+id/list_contacts_tvViewProfile"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>




