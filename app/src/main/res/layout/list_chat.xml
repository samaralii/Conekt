<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recieverView"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/list_chat_userInfo"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/list_chat_image"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_toRightOf="@+id/list_chat_userInfo"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/list_chat_userInfo"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="10"
                android:minLines="1"
                android:id="@+id/list_chat_message"
                android:padding="8dp"
                android:lines="1"
                android:gravity="top|left"
                android:scrollbars="none"
                android:elevation="2dp"
                />



        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/senderView"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/list_chat_SuserInfo"
            android:layout_alignParentEnd="true"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/list_chat_Simage"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_toLeftOf="@+id/list_chat_SuserInfo"
            android:layout_marginRight="5dp"
            android:layout_alignBottom="@+id/list_chat_SuserInfo"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="10"
                android:minLines="1"
                android:id="@+id/list_chat_Smessage"
                android:padding="8dp"
                android:lines="1"
                android:gravity="top|left"
                android:scrollbars="none"
                android:elevation="2dp"
                />



        </RelativeLayout>

    </RelativeLayout>








</LinearLayout>